    </fragment>
    <fragment
        android:id="@+id/item_search_resultFragment"
        android:name="com.example.recipeapp.item_search_resultFragment"
        android:label="fragment_item_search_result"
        tools:layout="@layout/fragment_item_search_result" />
    <fragment
        android:id="@+id/recipeFragment2"
        android:name="com.example.recipeapp.RecipeFragment"
        android:label="fragment_recipe2"
